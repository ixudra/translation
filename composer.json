{
    "name": "ixudra/translation",
    "description": "Custom PHP translation library for the Laravel 5 framework - developed by Ixudra",
    "version": "5.3",
    "keywords": ["Ixudra", "Laravel", "Translation"],
    "homepage": "http://ixudra.be",
    "license": "MIT",

    "authors": [
        {
            "name": "Jan Oris",
            "email": "jan.oris@ixudra.be"
        }
    ],

    "require": {
        "php": ">=5.4.0",
        "illuminate/support": "~5.0",
        "illuminate/translation": "~5.0"
    },

    "require-dev": {
        "phpunit/phpunit" : "~6.0",
        "mockery/mockery": "~0.9"
    },

    "autoload": {
        "psr-4": {
            "Ixudra\\Translation\\": "src/"
        }
    },

    "extra": {
        "laravel": {
            "providers": [
                "Ixudra\\Translation\\TranslationServiceProvider"
            ],
            "aliases": {
                "Translation": "Ixudra\\Translation\\Facades\\Translation"
            }
        }
    }
}
